<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp">

    <com.example.nanoleafdiy.utils.SquareImageView
        android:id="@+id/modeSelect_solid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5" />

    <com.example.nanoleafdiy.utils.SquareImageView
        android:id="@+id/modeSelect_rainbow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="@+id/modeSelect_solid"
        app:layout_constraintTop_toBottomOf="@+id/modeSelect_solid"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5" />

    <com.example.nanoleafdiy.utils.SquareImageView
        android:id="@+id/modeSelect_theaterchase"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toEndOf="@+id/modeSelect_rainbow"
        app:layout_constraintTop_toBottomOf="@+id/modeSelect_gradient"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5" />

    <com.example.nanoleafdiy.utils.SquareImageView
        android:id="@+id/modeSelect_gradient"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintLeft_toRightOf="@id/modeSelect_solid"
        app:layout_constraintTop_toTopOf="@+id/modeSelect_solid"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solid"
        app:layout_constraintBottom_toBottomOf="@+id/modeSelect_solid"
        app:layout_constraintEnd_toEndOf="@+id/modeSelect_solid"
        app:layout_constraintStart_toStartOf="@+id/modeSelect_solid"
        app:layout_constraintTop_toTopOf="@+id/modeSelect_solid" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gradient"
        app:layout_constraintBottom_toTopOf="@+id/modeSelect_theaterchase"
        app:layout_constraintEnd_toEndOf="@+id/modeSelect_gradient"
        app:layout_constraintStart_toEndOf="@+id/modeSelect_solid"
        app:layout_constraintTop_toTopOf="@+id/modeSelect_gradient" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rainbow"
        app:layout_constraintBottom_toBottomOf="@+id/modeSelect_rainbow"
        app:layout_constraintEnd_toEndOf="@+id/modeSelect_rainbow"
        app:layout_constraintStart_toStartOf="@+id/modeSelect_rainbow"
        app:layout_constraintTop_toBottomOf="@+id/modeSelect_solid" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Theater Chase"
        app:layout_constraintBottom_toBottomOf="@+id/modeSelect_theaterchase"
        app:layout_constraintEnd_toEndOf="@+id/modeSelect_theaterchase"
        app:layout_constraintStart_toEndOf="@+id/modeSelect_rainbow"
        app:layout_constraintTop_toTopOf="@+id/modeSelect_theaterchase" />

</androidx.constraintlayout.widget.ConstraintLayout>
